<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <LinearLayout
        android:id="@+id/userImageCell"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <ImageView
        android:id="@+id/userImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_launcher" />
        
    </LinearLayout>
    
    <LinearLayout
        android:id="@+id/contentCell"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >
        
        <RelativeLayout android:id="@+id/usernameCell"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >
        <TextView android:id="@+id/username"
            android:text="vivek_rk"
            android:textStyle="bold"
            android:layout_alignParentLeft="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        
        <TextView android:id="@+id/time"
            android:layout_alignParentRight="true"
            android:textSize="10dp"
            android:textColor="@android:color/darker_gray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1 min" />

        </RelativeLayout>
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView android:id="@+id/tweetMessage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="The United Nations Educational, Scientific and Cultural Organization (French L'Organisation des Nations unies pour l’éducation, la science et la culture : UNESCO; pronounced /juːˈnɛskoʊ/) is a specialized agency of the United Nations."/>
        </LinearLayout>
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView android:id="@+id/retweetedBy"
                android:text="vivek_rk"
                android:textSize="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>